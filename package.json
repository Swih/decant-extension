{
  "name": "decant",
  "version": "1.0.0",
  "type": "module",
  "description": "Decant the web. Extract pure, AI-ready content from any page â€” Markdown, JSON, MCP.",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:parsing": "vitest run --reporter=verbose src/core",
    "test:extraction": "vitest run --reporter=verbose src/core/smart-extract",
    "test:coverage": "vitest run --coverage",
    "build:analyze": "vite build --mode production && du -sh dist/",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.{js,css,html}\" \"tests/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.{js,css,html}\" \"tests/**/*.js\""
  },
  "keywords": [
    "chrome-extension",
    "web-scraping",
    "markdown",
    "ai",
    "mcp",
    "readability"
  ],
  "author": "Zoplop Studio",
  "license": "MIT",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "eslint": "^10.0.1",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^28.1.0",
    "prettier": "^3.8.1",
    "sharp": "^0.34.5",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@mozilla/readability": "^0.6.0",
    "turndown": "^7.2.2"
  }
}
